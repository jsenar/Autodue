<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Off-Limit Time:"
        android:id="@+id/off_limit_time_text"
        android:textSize="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Time:"
        android:id="@+id/start_time_text"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/off_limit_time_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Time:"
        android:id="@+id/end_time_text"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/start_time_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Repeat:"
        android:id="@+id/repeat_text"
        android:layout_below="@+id/end_time_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp"
        android:textSize="30dp"
        android:textStyle="bold"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Everyday"
        android:id="@+id/everyday"
        android:checked="false"
        android:layout_below="@+id/repeat_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monday"
        android:id="@+id/monday"
        android:checked="false"
        android:layout_above="@+id/saturday"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tuesday"
        android:id="@+id/tuesday"
        android:checked="false"
        android:layout_above="@+id/sunday"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wednesday"
        android:id="@+id/wednesday"
        android:checked="false"
        android:layout_alignTop="@+id/sunday"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sunday"
        android:id="@+id/sunday"
        android:checked="false"
        android:layout_below="@+id/saturday"
        android:layout_alignLeft="@+id/saturday"
        android:layout_alignStart="@+id/saturday" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friday"
        android:id="@+id/friday"
        android:checked="false"
        android:layout_below="@+id/thursday"
        android:layout_alignLeft="@+id/thursday"
        android:layout_alignStart="@+id/thursday" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thursday"
        android:id="@+id/thursday"
        android:checked="false"
        android:layout_below="@+id/repeat_text"
        android:layout_alignRight="@+id/off_limit_time_text"
        android:layout_alignEnd="@+id/off_limit_time_text" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saturday"
        android:id="@+id/saturday"
        android:checked="false"
        android:layout_below="@+id/friday"
        android:layout_alignLeft="@+id/friday"
        android:layout_alignStart="@+id/friday" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/starttime"
        android:layout_toRightOf="@+id/wednesday"
        android:layout_alignBottom="@+id/start_time_text"
        android:layout_toLeftOf="@+id/cancel_button"
        android:layout_toStartOf="@+id/cancel_button"
        android:background="@color/pink1"
        android:onClick="showTimePicker1"
        android:focusable="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/endtime"
        android:layout_above="@+id/repeat_text"
        android:layout_alignLeft="@+id/starttime"
        android:layout_alignStart="@+id/starttime"
        android:layout_alignRight="@+id/starttime"
        android:layout_alignEnd="@+id/starttime"
        android:background="@color/pink1"
        android:onClick="showTimePicker2"
        android:focusable="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set"
        android:id="@+id/set_button"
        android:layout_marginBottom="46dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/monday"
        android:layout_toEndOf="@+id/monday"
        android:textColor="@color/white"
        android:background="@color/black"
        android:clickable="true"
        android:onClick="closePopUp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/cancel_button"
        android:layout_alignTop="@+id/set_button"
        android:layout_alignRight="@+id/thursday"
        android:layout_alignEnd="@+id/thursday"
        android:textColor="@color/white"
        android:background="@color/black"
        android:clickable="true"
        android:onClick="closePopUp"/>


</RelativeLayout>